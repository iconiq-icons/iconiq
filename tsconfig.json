{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@iconiq/core": ["packages/iconiq/src"],
      "@iconiq/react": ["packages/iconiq-react/src"],
      "@iconiq/shared": ["packages/shared/src"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "**/coverage"]
}
